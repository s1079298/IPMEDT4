<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.thier.demo.MainActivity"
    android:background="#e2e2e2">

    <TextView

    android:text="@string/question1"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_above="@+id/q2"
        android:layout_toEndOf="@+id/q1"
        android:id="@+id/textquestion1" />

    <TextView

        android:text="@string/q"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/q1"
        android:textColor="#000000"
        android:textSize="@dimen/abc_text_size_display_2_material" />


    <TextView

        android:text="@string/question2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_alignBottom="@+id/q2"
        android:layout_toEndOf="@+id/q2"
        android:id="@+id/textquestion2" />

    <TextView

        android:text="@string/q"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/q2"
        android:textColor="#000000"
        android:textSize="@dimen/abc_text_size_display_2_material"
        android:layout_marginTop="197dp"
        android:layout_below="@+id/q1"
        android:layout_alignParentStart="true" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorum"
        android:id="@+id/textq1"
        android:textColor="#000000"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_below="@+id/textquestion1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lorum"
        android:id="@+id/textq2"
        android:textColor="#000000"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_below="@+id/textquestion2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find method"
        android:id="@+id/button"
        android:layout_marginTop="502dp"
        android:layout_marginLeft="115dp"
        android:textColor="#ffffff"
        android:background="#37bc4d"/>

</RelativeLayout>
