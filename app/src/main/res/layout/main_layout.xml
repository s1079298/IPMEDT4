<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"
                android:alpha="0.87"
                android:textSize="16sp"
                android:text="@string/titel"
                android:id="@+id/titelView"
                android:layout_alignParentTop="true"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/people"
                android:id="@+id/textView"
                android:layout_marginTop="60dp"
                android:layout_alignLeft="@+id/seekBar"
                android:layout_alignStart="@+id/seekBar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/process"
                android:id="@+id/textView2"
                android:layout_marginTop="60dp"
                android:layout_alignBottom="@+id/textView"
                android:layout_alignRight="@+id/seekBar"
                android:layout_alignEnd="@+id/seekBar" />

            <SeekBar
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:paddingTop="10dp"
                android:paddingBottom="31dp"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info1"
                android:src="@mipmap/ic_info_black_18dp"
                android:background="@android:color/transparent"
                android:paddingTop="15dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:layout_alignTop="@+id/seekBar"
                android:layout_alignLeft="@+id/info2"
                android:layout_alignStart="@+id/info2" />

            <!-- Tweede Slider -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/software"
                android:id="@+id/textView4"
                android:layout_below="@+id/seekBar"
                android:layout_alignLeft="@+id/seekBar"
                android:layout_alignStart="@+id/seekBar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/documentation"
                android:id="@+id/textView3"
                android:layout_below="@+id/seekBar"
                android:layout_alignRight="@+id/seekBar"
                android:layout_alignEnd="@+id/seekBar" />

            <SeekBar
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar2"
                android:paddingTop="31dp"
                android:paddingBottom="31dp"
                android:layout_below="@+id/seekBar"
                android:layout_alignLeft="@+id/seekBar"
                android:layout_alignStart="@+id/seekBar" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info2"
                android:src="@mipmap/ic_info_black_18dp"
                android:background="@android:color/transparent"
                android:paddingTop="36dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:layout_below="@+id/seekBar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <!-- Derde Slider -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/teamwork"
                android:id="@+id/textView5"
                android:layout_below="@+id/seekBar2"
                android:layout_alignLeft="@+id/seekBar2"
                android:layout_alignStart="@+id/seekBar2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/contract"
                android:id="@+id/textView6"
                android:layout_alignTop="@+id/textView5"
                android:layout_alignRight="@+id/seekBar2"
                android:layout_alignEnd="@+id/seekBar2" />

            <SeekBar
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar3"
                android:paddingTop="31dp"
                android:paddingBottom="31dp"
                android:layout_alignTop="@+id/textView5"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info3"
                android:src="@mipmap/ic_info_black_18dp"
                android:background="@android:color/transparent"
                android:paddingTop="36dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:layout_alignTop="@+id/seekBar3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <!-- Vierde Slider -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/dynamic"
                android:id="@+id/textView7"
                android:layout_below="@+id/seekBar3"
                android:layout_alignLeft="@+id/seekBar4"
                android:layout_alignStart="@+id/seekBar4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/planned"
                android:id="@+id/textView8"
                android:layout_below="@+id/seekBar3"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6" />

            <SeekBar
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar4"
                android:paddingTop="31dp"
                android:paddingBottom="31dp"
                android:layout_below="@+id/seekBar3"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info4"
                android:src="@mipmap/ic_info_black_18dp"
                android:background="@android:color/transparent"
                android:paddingTop="36dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:layout_below="@+id/seekBar3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/nextButton"
                android:onClick="conclusion"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="#00C853"
                android:textAllCaps="true"
                android:text="@string/next"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:alpha="0.87"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"/>


        </RelativeLayout>
    </LinearLayout>
</ScrollView>