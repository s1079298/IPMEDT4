            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textColor="#000000"
                android:alpha="0.87"
                android:textSize="18sp"
                android:text="@string/weightTitel"
                android:id="@+id/titelView"
                android:paddingTop="16dp"
                android:paddingLeft="16dp"
                android:paddingStart="16dp"
                android:paddingBottom="16dp"
                android:paddingRight="16dp"
                android:paddingEnd="16dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <!-- Eerste Weight -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/weight1"
                android:id="@+id/textWeight1"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/titelView"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/min"
                android:id="@+id/min1"
                android:layout_alignTop="@+id/weightBar"
                android:layout_alignLeft="@+id/titelView"
                android:layout_alignStart="@+id/titelView"
                android:layout_marginTop="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/plus"
                android:id="@+id/plus1"
                android:layout_alignTop="@+id/min1"
                android:layout_alignLeft="@+id/plus3"
                android:layout_alignStart="@+id/plus3" />

            <SeekBar
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/weightBar"
                android:max="2"
                android:progress="1"
                android:paddingTop="16dp"
                android:paddingBottom="31dp"
                android:layout_below="@+id/textWeight1"
                android:layout_centerHorizontal="true" />


            <!-- Tweede Weight -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
