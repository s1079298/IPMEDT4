                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/min"
                android:id="@+id/min4"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/textWeight4"
                android:layout_alignLeft="@+id/min3"
                android:layout_alignStart="@+id/min3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/plus"
                android:id="@+id/plus4"
                android:layout_alignTop="@+id/min4"
                android:layout_alignRight="@+id/titelView"
                android:layout_alignEnd="@+id/titelView" />

            <SeekBar
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/weightBar4"
                android:max="2"
                android:progress="1"
                android:paddingTop="31dp"
                android:paddingBottom="31dp"
                android:layout_below="@+id/weightBar3"
