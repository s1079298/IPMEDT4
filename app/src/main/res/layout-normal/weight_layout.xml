                android:id="@+id/min2"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/textWeight2"
                android:layout_alignLeft="@+id/min1"
                android:layout_alignStart="@+id/min1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/plus"
                android:id="@+id/plus2"
                android:layout_alignTop="@+id/min2"
                android:layout_alignLeft="@+id/plus1"
                android:layout_alignStart="@+id/plus1" />

            <SeekBar
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/weightBar2"
                android:max="2"
                android:progress="1"
                android:paddingTop="31dp"
                android:paddingBottom="31dp"
                android:layout_below="@+id/weightBar"
                android:layout_alignLeft="@+id/weightBar"
                android:layout_alignStart="@+id/weightBar"
                android:layout_alignRight="@+id/weightBar"
                android:layout_alignEnd="@+id/weightBar" />


            <!-- Derde Weight -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
